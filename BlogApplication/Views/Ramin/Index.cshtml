@{
    Layout = null;
}
@model BlogApplication.Models.LoginModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin - Login Page</title>
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Site.css">
</head>
<body>
    <form asp-action="Login" asp-controller="Ramin">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-5">
                    <div class="card p-3 text-center">
                        <h4 class="form-text-color">Login Form</h4>
                        <div class="form">
                            <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                        </div>
                        <div class="d-flex justify-content-between mt-3 mb-3">
                            <div class="form-check"> <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"> <label class="form-check-label form-text-color" for="flexCheckDefault"> Remember password? </label> </div>
                        </div> <button class="btn btn-success">Nice to see you </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
