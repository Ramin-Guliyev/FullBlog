
<header class="header text-center">
    <h1 class="blog-name pt-lg-4 mb-0"><a class="no-text-decoration" href="/">Ramin's Blog</a></h1>

    <nav class="navbar navbar-expand-lg navbar-dark">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navigation" class="collapse navbar-collapse flex-column">
            <div class="profile-section pt-3 pt-lg-0">
                <img class="profile-image mb-3 rounded-circle mx-auto" src="~/assets/images/profile.png" alt="image">@*Profil Photo*@

                <div class="bio mb-3">Hi, my name is Ramin Guliyev. I am full stack .NET Developer.<br>
            <i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp Baku , Azerbaijan<br> <a href="/about">Find out more about me</a></div><!--//bio-->
                <ul class="social-list list-inline py-3 mx-auto">
                    <li class="list-inline-item"><a href="https://twitter.com/ra1000ishere"><i class="fab fa-twitter fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="https://www.linkedin.com/in/ra1000ishere/"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="https://github.com/Ramin-Guliyev"><i class="fab fa-github-alt fa-fw"></i></a></li>
                </ul><!--//social-list-->
                <hr>
            </div><!--//profile-section-->

            <ul class="navbar-nav flex-column text-start">
                @if (@Context.Request.Path.ToString().Contains("/home") || @Context.Request.Path.Value == "/")
                {
                    <li class="nav-item">
                        <a class="nav-link active" href="/home"><i class="fas fa-home fa-fw me-2"></i>Blog Home <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link " href="/home"><i class="fas fa-home fa-fw me-2"></i>Blog Home <span class="sr-only">(current)</span></a>
                    </li>
                }
                @if (@Context.Request.Path.ToString().Contains("/post"))
                {
                    <li class="nav-item">
                        <a class="nav-link active" href="/post"><i class="fas fa-bookmark fa-fw me-2"></i>Blog Post</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/post"><i class="fas fa-bookmark fa-fw me-2"></i>Blog Post</a>
                    </li>
                }
                @if (@Context.Request.Path.ToString().Contains("/about"))
                {
                    <li class="nav-item">
                        <a class="nav-link active"  href="/about"><i class="fas fa-user fa-fw me-2"></i>About Me</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/about"><i class="fas fa-user fa-fw me-2"></i>About Me</a>
                    </li>
                }
            </ul>

            <div class="my-2 my-md-3">
                <a class="btn btn-primary" href="/Ramin/DownloadFile" target="_blank">Download Resume</a>
            </div>
        </div>
    </nav>
</header>